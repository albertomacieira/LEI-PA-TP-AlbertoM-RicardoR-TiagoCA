<Window x:Class="UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Login" Height="250" Width="400">
    <Grid Margin="20">
        <StackPanel VerticalAlignment="Center">
            <!-- Username TextBox com "placeholder" funcional -->
            <TextBox x:Name="txtUsername"
                     Text="Username"
                     Foreground="Gray"
                     Margin="0,0,0,10"
                     GotFocus="TextBox_GotFocus"
                     LostFocus="TextBox_LostFocus" />

            <!-- PasswordBox (podes querer algo similar para placeholder aqui também) -->
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,10" />

            <Button Content="Login" Width="100" HorizontalAlignment="Center" Click="Login_Click"/>
        </StackPanel>
    </Grid>
</Window>
