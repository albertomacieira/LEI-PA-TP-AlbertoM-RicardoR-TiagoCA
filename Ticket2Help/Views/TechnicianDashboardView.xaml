<Window x:Class="UI.Views.TechnicianDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Painel do Técnico"
        Height="400" Width="600"
        WindowStartupLocation="CenterScreen">

    <Grid Background="#F0F0F0" Margin="10">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Spacing="10">

            <TextBlock Text="Bem-vindo, Técnico"
                       FontSize="24"
                       FontWeight="Bold"
                       HorizontalAlignment="Center"
                       Margin="0,0,0,20"/>

            <Button Content="Ver Tickets"
                    Width="200"
                    Height="40"
                    FontSize="16"
                    Command="{Binding VerTicketsCommand}" />

            <!-- Podes adicionar mais botões/comandos aqui -->

        </StackPanel>
    </Grid>
</Window>
