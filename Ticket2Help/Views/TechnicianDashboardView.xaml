<Window x:Class="UI.Views.TechnicianDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Dashboard Técnico" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20" HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock FontSize="20" FontWeight="Bold" Text="Dashboard do Técnico" Margin="0,0,0,20"/>

            <Button Content="Ver Tickets Pendentes" Width="200" Margin="0,5" Command="{Binding VerTicketsCommand}"/>
            <Button Content="Ver Tickets Resolvidos" Width="200" Margin="0,5"/>
            <Button Content="Perfil" Width="200" Margin="0,5"/>
        </StackPanel>
    </Grid>
</Window>
