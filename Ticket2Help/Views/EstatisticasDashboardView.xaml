<Window x:Class="UI.View.EstatisticasDashboardView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        Title="Estatísticas de Tickets"
        Height="450" Width="700"
        WindowStartupLocation="CenterScreen"
        Background="#FAFAFA">

    <Grid Margin="20">
        <Border BorderBrush="#DDDDDD" BorderThickness="1" CornerRadius="10" Padding="20" Background="White">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">

                <TextBlock Text="📊 Estatísticas Gerais dos Tickets"
                           FontSize="24"
                           FontWeight="Bold"
                           HorizontalAlignment="Center"
                           Margin="0,0,0,20"
                           Foreground="#333" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>

                    <lvc:PieChart Series="{Binding TicketSeries}"
                                  Width="250" Height="250"
                                  LegendLocation="Right"
                                  Margin="0,0,20,0"
                                  InnerRadius="20"
                                  Grid.Column="0">
                        <lvc:PieChart.ChartLegend>
                            <lvc:DefaultLegend BulletSize="12" Foreground="#444"/>
                        </lvc:PieChart.ChartLegend>
                    </lvc:PieChart>
                </Grid>

            </StackPanel>
        </Border>
    </Grid>
</Window>